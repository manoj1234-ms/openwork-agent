[package]
name = "{{projectName}}"
version = "0.1.0"
edition = "2021"
authors = ["{{author}}"]
description = "{{description}}"

[dependencies]
# Web framework
actix-web = "4.4"
actix-cors = "0.7"

# Database
diesel = { version = "2.1", features = ["postgres", "uuid", "chrono", "r2d2"] }
diesel_migrations = "2.1"

# Serialization
serde = { version = "1.0", features = ["derive"] }
serde_json = "1.0"

# UUID
uuid = { version = "1.5", features = ["v4", "serde"] }

# Date/Time
chrono = { version = "0.4", features = ["serde"] }

# Environment
dotenv = "0.15"

# Logging
log = "0.4"
env_logger = "0.10"

# Async
tokio = { version = "1.32", features = ["full"] }

# Error handling
anyhow = "1.0"
thiserror = "1.0"